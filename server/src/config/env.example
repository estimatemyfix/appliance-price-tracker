# Server Configuration
NODE_ENV=development
PORT=5000
API_URL=http://localhost:5000
CLIENT_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/appliance_tracker
DB_HOST=localhost
DB_PORT=5432
DB_NAME=appliance_tracker
DB_USER=username
DB_PASSWORD=password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@appliancetracker.com
FROM_NAME=Appliance Price Tracker

# OpenAI Configuration (for AI recommendations)
OPENAI_API_KEY=your-openai-api-key

# Web Scraping Configuration
PUPPETEER_HEADLESS=true
SCRAPER_DELAY=2000
MAX_CONCURRENT_SCRAPERS=3
SCRAPER_TIMEOUT=30000

# Redis Configuration (optional, for caching)
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn-here

# Affiliate Configuration
AMAZON_ASSOCIATE_TAG=your-amazon-associate-tag
HOMEDEPOT_AFFILIATE_ID=your-homedepot-affiliate-id
LOWES_AFFILIATE_ID=your-lowes-affiliate-id
BESTBUY_AFFILIATE_ID=your-bestbuy-affiliate-id 